    "@google/generative-ai": "^0.24.1",
    "@sendgrid/mail": "^8.1.0",
    "aws-sdk": "^2.1517.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "mapbox-gl": "^3.17.0",
    "moment": "^2.30.1",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^6.16.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "razorpay": "^2.9.2",
    "redis": "^4.6.12",
